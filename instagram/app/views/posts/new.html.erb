
<%- if current_user %>
	<h1>Welcome! <%= current_user.email %></h1>
	<h2>New Post!</h2>
	<hr>
	<%= form_for @post, html: { multipart: true } do |f| %>
		<div>
		  <%= f.label :image %>
			<%= f.file_field :image %>
			<br>
			<%= f.label :description %>
			<%= f.text_area :description %>
			<br>
      <%= f.hidden_field :user, value: current_user.email%>
			<br>
			<%= f.submit %>
		</div>
		<%end%>
<% else %>
<h2> Please Log in to post images</h2>
<% end %>
